/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run kentsislab/proteomegenerator3 -profile test_single_sample,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 2,
        memory: '15.GB',
        time: '1.h',
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    input                      = 'https://raw.githubusercontent.com/apsteinberg/test-datasets/proteomegenerator3/samplesheet_singlesample.csv'
    // Genome references
    fasta                      = 'https://raw.githubusercontent.com/apsteinberg/test-datasets/proteomegenerator3/reference/chr22_1-17550000.fa'
    gtf                        = 'https://raw.githubusercontent.com/apsteinberg/test-datasets/proteomegenerator3/reference/chr22_1-17500000.gtf'
}
